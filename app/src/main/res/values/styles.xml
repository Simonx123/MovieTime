<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#ce5a5a</item>
        <item name="colorPrimaryDark">#d22323</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="movies_list_title_popular">
        <item name="android:textSize">@dimen/popular_movie</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/popular_movie_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/popular_movie_background</item>
    </style>

</resources>
